<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.AturJadwalFragment">

    <Switch
        android:id="@+id/switchStatusPraktik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Praktek: Buka/Tutup"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etJamBuka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jam Buka (HH:mm)"
        android:inputType="time"
        android:focusable="false"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etJamTutup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jam Tutup (HH:mm)"
        android:inputType="time"
        android:focusable="false"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSimpanJadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Jadwal"
        android:backgroundTint="#4CAF50" />

</LinearLayout>